{
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "files": ["src/index.ts"]
}
